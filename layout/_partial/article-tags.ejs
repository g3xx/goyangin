<% if (item.tags && item.tags.length){ %>
<%
    var tags = [];
    item.tags.forEach(function(tag){
        tags.push('<a href="' + config.root + tag.path + '"><span class="tag is-info"><span class="icon is-small"><i class="fa fa-tag"></i> &nbsp;</span>' + tag.name + '</span></a>');
    });
%>
    <%- tags.join(' ') %>

<% } %>